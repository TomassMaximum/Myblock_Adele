<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@color/colorPrimary"
        android:elevation="4dp"
        android:id="@+id/main_activity_toolbar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <at.markushi.ui.ActionView
                android:id="@+id/action_view"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_width="32dp"
                android:layout_height="32dp"
                app:av_color="@android:color/white"/>

            <ImageView
                android:layout_centerInParent="true"
                android:maxHeight="26dp"
                android:adjustViewBounds="true"
                android:src="@drawable/makeblock_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/icon_link"
                android:layout_marginEnd="13dp"
                android:layout_marginTop="13dp"
                android:maxHeight="26dp"
                android:adjustViewBounds="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/nav_unlink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </android.support.v7.widget.Toolbar>

    <FrameLayout
        android:layout_marginTop="52dp"
        android:elevation="4dp"
        android:id="@+id/menu_fragment_container"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"/>

    <FrameLayout
        android:layout_marginTop="52dp"
        android:id="@+id/fragment_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>