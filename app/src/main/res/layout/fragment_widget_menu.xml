<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="210dp"
    android:layout_height="match_parent"
    android:background="@color/colorAccent">

    <LinearLayout
        android:id="@+id/widget_menu"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:background="#424242">

        <LinearLayout
            android:background="@drawable/selected_background"
            android:id="@+id/move_linear"

            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/move_icon"
                android:layout_marginTop="4dp"
                android:adjustViewBounds="true"
                android:maxHeight="32dp"
                android:src="@drawable/move_selector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/move_text"
                android:text="Move"
                android:textColor="@color/text_color"
                android:layout_marginBottom="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:background="@drawable/selected_background"

            android:id="@+id/display_linear"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/display_icon"
                android:layout_marginTop="4dp"
                android:adjustViewBounds="true"
                android:maxHeight="32dp"
                android:src="@drawable/display_selector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/display_text"
                android:text="Display"
                android:textColor="@color/text_color"
                android:layout_marginBottom="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:background="@drawable/selected_background"

            android:id="@+id/sense_linear"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/sense_icon"
                android:layout_marginTop="4dp"
                android:adjustViewBounds="true"
                android:maxHeight="32dp"
                android:src="@drawable/sense_selector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/sense_text"
                android:text="Sense"
                android:textColor="@color/text_color"
                android:layout_marginBottom="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:background="@drawable/selected_background"

            android:id="@+id/control_linear"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/control_icon"
                android:layout_marginTop="4dp"
                android:adjustViewBounds="true"
                android:maxHeight="32dp"
                android:src="@drawable/control_selector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/control_text"
                android:text="Control"
                android:textColor="@color/text_color"
                android:layout_marginBottom="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:background="@drawable/selected_background"

            android:id="@+id/custom_linear"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/custom_icon"
                android:layout_marginTop="4dp"
                android:adjustViewBounds="true"
                android:maxHeight="32dp"
                android:src="@drawable/custom_selector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/custom_text"
                android:text="Custom"
                android:textColor="@color/text_color"
                android:layout_marginBottom="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"/>

    </LinearLayout>

    <FrameLayout
        android:layout_toEndOf="@+id/widget_menu"
        android:layout_toRightOf="@+id/widget_menu"
        android:id="@+id/widget_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>